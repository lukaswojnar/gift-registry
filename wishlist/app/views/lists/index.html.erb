<h2>Wish lists</h2>
<div class="row">
  <div class="small-12 columns">
    <table>
      <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Edit</th>
        <th>Delete</th>
        <th>Creator</th>
      </tr>
      </thead>
      <tbody>
      <% @lists.each do |l| %>
        <tr>
          <td><%= l.title %></td>
          <td><%= l.description %></td>
          <td><%= link_to 'Edit', edit_list_path(@list, l) %></td>
          <td><%= link_to 'Destroy', lists_path(@list, l), method: :delete, data: { confirm: "Destroy?"} %></td>
          <td>Some name</td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= link_to 'Add new', new_list_path %>