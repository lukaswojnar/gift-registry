<% if @list.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@list.errors.count, "error") %> prohibited this wish list from being saved:</h2>

    <ul>
      <% @list.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @list do |f| %>
  <div class="row">
    <div class="small-12 columns">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <%= f.label :address %>
      <%= f.text_field :address %>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <%= f.label :event_date %>
      <%= f.datetime_select :event_date %>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <%= f.submit "Create Your Wishlist" %>
    </div>
  </div>
<% end %>