<a href="#" data-reveal-id="myModal">Add Gift</a>

<div id="myModal" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
  <%= render template: 'gifts/new' %>  
  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>

<div class="row">
<div class="small-12 columns">
  <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Link</th>
      <th>Price</th>
      <th>Edit</th>
      <th>Delete</th>
      <th>Assignee</th>
    </tr>
  </thead>
  <tbody>
    <% @gifts.each do |g| %>
      <tr>
        <td><%= g.title %></td>
        <td><%= g.description %></td>
        <td><%= link_to g.link, g.link %></td>
        <td><%= g.price %></td>
        <td><%= link_to 'Edit', edit_list_gift_path(@list, g) %></td>
        <td><%= link_to 'Destroy', list_gift_path(@list, g), method: :delete, data: { confirm: "Destroy?"} %></td>
        <td>
          <%= form_for [@list, g] do |f| %>
            <%= f.text_field :assigned_to, value: g.assigned_to %>
            <%= f.submit 'Save' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>
</div>