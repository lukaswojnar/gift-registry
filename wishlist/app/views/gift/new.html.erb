<h1>New Gift</h1>

<%= form_for :gift do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.text_area :price %>
  </p>

  <p>
    <%= f.label :link %><br>
    <%= f.text_area :link %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>